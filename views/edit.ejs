<%- include("_header") -%>

<h1>Customer Update</h1>

<div class="container">
  <form class="form-horizontal" action="/edit/<%= data.cusid %>" method="post">

    <div class="form-group form-inline">
      <label class="control-label col-sm-2" for="id">ID:</label>
      <div class="col-sm-10 form-inline">  
        <input type="number" class="form-control" id="id" name="id" readonly value=<%= data.cusid %> >
      </div>
    </div>

    <div class="form-group form-inline">
      <label class="control-label col-sm-2" for="firstname">First Name:</label>
      <div class="col-sm-10 form-inline">          
        <input type="text" class="form-control" id="firstname" name="firstname" required value=<%= data.cusfname %> >
    </div>
    </div>

    <div class="form-group form-inline">
      <label class="control-label col-sm-2" for="lastname">Last Name:</label>
      <div class="col-sm-10 form-inline">          
        <input type="text" class="form-control" id="lastname" name="lastname" required value=<%= data.cuslname %> >
    </div>
    </div>

    <div class="form-group form-inline">
        <label for="state" class="col-sm-2 control-label">State</label>
        <div class="col-sm-10 form-inline">
            <input type="text" maxlength="2" class="form-control" id="state" name="state"  value=<%= data.cusstate %> >
        </div>
    </div>

    <div class="form-group form-inline">
      <label class="control-label col-sm-2" for="salesytd">Sales YTD:</label>
      <div class="col-sm-10 form-inline">
        <input type="number" class="form-control" id="salesytd" name="salesytd"  value=<%= data.cussalesytd %> >
    </div>
    </div>

    <div class="form-group form-inline">
      <label class="control-label col-sm-2" for="previousyear">Previous Years Sales:</label>
      <div class="col-sm-10 form-inline">
        <input type="number" class="form-control" id="previousyear" name="previousyear"  value=<%= data.cussalesprev %> >
    </div>
    </div>

    <div class="form-group form-inline" style="display: flex; margin-left: 200px;">
        <div class="col-sm-offset-10 col-xs-3">
            <input type="submit" value="Update Customer" class="btn btn-warning"/>
        </div>
    </div>
  </form>
</div>

<% if(status !== '') { %>
    <h4><%= status %></h4>
<% } %>

<%- include("_footer") -%>