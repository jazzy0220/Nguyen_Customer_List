<%- include("_header") -%>

<h1>Create New Customer</h1>

<div class="container">
  <form class="form-horizontal" action="/create" method="post">

    <div class="form-group form-inline">
      <label class="control-label col-sm-2" for="id">ID:</label>
      <div class="col-sm-10 form-inline">  
        <input type="number" class="form-control" id="id" name="id" required value=<%= data[0] %> >
        <p>	&nbsp;(Required)</p>
      </div>
    </div>

    <div class="form-group form-inline">
      <label class="control-label col-sm-2" for="firstname">First Name:</label>
      <div class="col-sm-10 form-inline">          
        <input type="text" class="form-control" id="firstname" name="firstname" required value=<%= data[1] %> >
        <p>	&nbsp;(Required)</p>
    </div>
    </div>

    <div class="form-group form-inline">
      <label class="control-label col-sm-2" for="lastname">Last Name:</label>
      <div class="col-sm-10 form-inline">          
        <input type="text" class="form-control" id="lastname" name="lastname" required value=<%= data[2] %> >
        <p>	&nbsp;(Required)</p>
    </div>
    </div>

    <div class="form-group form-inline">
        <label for="state" class="col-sm-2 control-label">State</label>
        <div class="col-sm-10 form-inline">
            <input type="text" maxlength="2" class="form-control" id="state" name="state" value=<%= data[3] %> >
        </div>
    </div>

    <div class="form-group form-inline">
      <label class="control-label col-sm-2" for="salesytd">Sales YTD:</label>
      <div class="col-sm-10 form-inline">
        <input type="number" class="form-control" id="salesytd" name="salesytd" value=<%= data[4] %> >
    </div>
    </div>

    <div class="form-group form-inline">
      <label class="control-label col-sm-2" for="previousyear">Previous Years Sales:</label>
      <div class="col-sm-10 form-inline">
        <input type="number" class="form-control" id="previousyear" name="previousyear" value=<%= data[5] %> >
    </div>
    </div>

    <div class="form-group form-inline" style="display: flex; margin-left: 200px;">
        <div class="col-sm-offset-10 col-xs-3">
            <input type="submit" value="Create" class="btn btn-primary"/>
            <!-- Click Reset button to reset everything on the form -->
            <a type="button" class="btn btn-primary" href="/create">Reset</a>
        </div>
    </div>
  </form>
</div>

<% if(error === '' && begin === false) { %>
    <h2>New Customer Created!</h2>
<% } else if (begin === false) { %>
    <h2>Error creating new customer</h2>
    <h4><%= error %></h4>
<% }  %>

<%- include("_footer") -%>