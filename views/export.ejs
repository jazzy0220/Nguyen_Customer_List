<%- include("_header") -%>

<h1>Customer Export</h1>
<h4>Total number of records in the database: <%= model.length %></h4>
<h4>Enter a file name and click "Export Customer"</h4>


<form action="/export" method="post">
    <div class="form-group form-inline">
      <label class="control-label col-sm-2" for="id">File Name:</label>
      <div class="col-sm-10 form-inline">  
        <input type="text" class="form-control" id="exportfile" name="exportfile" required value="export.txt" >
      </div>
    </div>

    <div class="form-group form-inline" style="display: flex; margin-left: 200px;">
        <div class="col-sm-offset-10 col-xs-3">
            <input type="submit" value="Export Customers" class="btn btn-primary"/>
        </div>
    </div>

</form>

<% if(message.substring(0,5) === "Error") { %>
    <h2>Error!</h2>
    <p><%= message %></p>
<% } %>
<%- include("_footer") -%>